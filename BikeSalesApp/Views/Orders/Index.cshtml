@model IEnumerable<BikeSalesApp.Models.Order>
<h1>Orders</h1>
<hr />
<p>
    @Html.ActionLink("New Order", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customers.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staffs.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiredDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShippedDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customers.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staffs.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippedDate)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }, new { @class = "glyphicon glyphicon-edit btn btn-info btn-xs" })
                    @Html.Label(" | ")
                    @Html.ActionLink("Details", "Details", new { id = item.OrderId }, new { @class = "glyphicon glyphicon-th-list btn btn-success btn-xs" })
                    @Html.Label(" | ")
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderId }, new { @class = "glyphicon glyphicon-trash btn btn-danger btn-xs" })

                }
                else
                {
                    @Html.ActionLink("Details", "Details", new { id = item.OrderId }, new { @class = "glyphicon glyphicon-th-list btn btn-success btn-xs" })
                }
            </td>

        </tr>
    }

</table>